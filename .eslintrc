---
  root: true
  env:
    browser: true
    es6: true
    jest: true
    node: true
  extends:
    - eslint:recommended
    - airbnb
    - prettier
  parser: babel-eslint
  plugins:
    - babel
    - import
    - jest
    - react
    - prettier
  rules:
    prettier/prettier: error
    jsx-a11y/anchor-is-valid:
      - error:
        aspects:
         - invalidHref
         - preferButton
        components:
          - Link
        specialLink:
          - hrefLeft
          - hrefRight      
