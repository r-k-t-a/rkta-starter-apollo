{
  "name": "rkta-starter-apollo",
  "version": "0.0.1",
  "description": "A boilerplate for internal use",
  "main": "index.js",
  "scripts": {
    "analyze": "BUNDLE_ANALYZE=both next build",
    "analyze:server": "BUNDLE_ANALYZE=server next build",
    "analyze:browser": "BUNDLE_ANALYZE=browser next build",
    "build": "next build",
    "check:all": "npm run test && npm run lint && npm run type-check",
    "commit": "git-cz",
    "deploy": "now --prod",
    "predeploy": "npm run check:all",
    "dev": "next -p 8000",
    "now:dev": "now dev -p 8000",
    "now-build": "npm run build",
    "prebuild": "npm run check:all",
    "lint": "eslint 'config' 'pages' 'src' --ext .ts,.tsx",
    "prestart": "npm run build",
    "start": "next start -p 8000",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit",
    "updatedeps": "ncu -u && npm update"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "author": "Sergei Droganov",
  "license": "MIT",
  "devDependencies": {
    "@graphql-codegen/typescript-graphql-files-modules": "^1.7.0",
    "@types/detect-node": "^2.0.0",
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.139",
    "@types/node": "^12.7.8",
    "@types/react": "^16.9.3",
    "@typescript-eslint/eslint-plugin": "^2.3.1",
    "@typescript-eslint/parser": "^2.3.1",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "apollo-server-testing": "^2.9.4",
    "babel-eslint": "^10.0.3",
    "babel-plugin-emotion": "^10.0.19",
    "babel-plugin-module-resolver": "^3.2.0",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "^3.0.2",
    "dotenv": "^8.1.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-import-resolver-babel-module": "^5.1.0",
    "eslint-import-resolver-webpack": "^0.11.1",
    "eslint-plugin-emotion": "^10.0.14",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.17.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "jest-emotion": "^10.0.17",
    "jest-transform-graphql": "^2.1.0",
    "now": "^16.2.0",
    "npm-check-updates": "^3.1.23",
    "prettier": "^1.18.2",
    "typescript": "^3.6.3",
    "webpack": "^4.41.0",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.1",
    "@apollo/react-ssr": "^3.1.1",
    "@emotion/cache": "^10.0.19",
    "@emotion/core": "^10.0.17",
    "@emotion/styled": "^10.0.17",
    "@rkta/entypo": "^0.0.43",
    "@rkta/ui": "^0.0.43",
    "apollo-cache-inmemory": "^1.6.3",
    "apollo-client": "^2.6.4",
    "apollo-link": "^1.2.13",
    "apollo-link-context": "^1.0.19",
    "apollo-link-error": "^1.1.12",
    "apollo-link-http": "^1.5.16",
    "apollo-link-state": "^0.4.2",
    "create-emotion-server": "^10.0.14",
    "detect-node": "^2.0.4",
    "graphql": "^14.5.8",
    "graphql-tag": "^2.10.1",
    "graphql-tools": "^4.0.5",
    "isomorphic-unfetch": "^3.0.0",
    "lodash": "^4.17.15",
    "next": "^9.0.6",
    "next-server": "^9.0.5",
    "prop-types": "^15.7.2",
    "react": "^16.9.0",
    "react-dom": "^16.9.0"
  }
}
